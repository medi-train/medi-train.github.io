---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const papers = await getCollection('papers');
  return papers.map((paper) => ({
    params: { slug: paper.slug },
    props: { paper },
  }));
}

const { paper } = Astro.props;
const { Content } = await paper.render();
---

<BaseLayout
  title={`${paper.data.title} - MediTrain`}
  description={paper.data.description}
>
  <article class="max-w-5xl mx-auto px-4 sm:px-6 py-8 sm:py-16">
    
    <nav class="mb-6 sm:mb-8 text-white/70">
      <ol class="flex items-center gap-2 text-xs sm:text-sm overflow-x-auto">
        <li class="whitespace-nowrap">
          <a href="/papers" class="hover:text-yellow transition-colors">Papers</a>
        </li>
        <li class="flex-shrink-0">
          <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </li>
        <li class="text-white truncate">
          {paper.data.title}
        </li>
      </ol>
    </nav>

    
    <header class="mb-8 sm:mb-12">
      <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4 sm:mb-6">
        {paper.data.title}
      </h1>

      <div class="flex flex-wrap items-center gap-3 sm:gap-6 text-sm sm:text-base text-white/80 mb-4 sm:mb-6">
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4 sm:w-5 sm:h-5 text-yellow flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <time datetime={paper.data.pubDate.toISOString()}>
            {paper.data.pubDate.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
        </div>

        {paper.data.organization && (
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 sm:w-5 sm:h-5 text-yellow flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            <span class="break-words">{paper.data.organization}</span>
          </div>
        )}
      </div>

      <div class="flex items-start gap-2 text-xs sm:text-sm text-white/70 mb-4 sm:mb-6">
        <svg class="w-4 h-4 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
        </svg>
        <span class="break-words">{paper.data.authors.join(', ')}</span>
      </div>

      {paper.data.pdfUrl && (
        <a
          href={paper.data.pdfUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 sm:px-6 py-2 sm:py-3 bg-yellow text-dark text-sm sm:text-base font-semibold rounded-full hover:bg-yellow-light transition-colors"
        >
          <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Download PDF
        </a>
      )}
    </header>

    
    {paper.data.image && (
      <div class="mb-8 sm:mb-12 rounded-xl sm:rounded-2xl overflow-hidden border border-white/10">
        <img
          src={paper.data.image}
          alt={paper.data.title}
          class="w-full"
        />
      </div>
    )}

    
    <div class="prose prose-invert prose-sm sm:prose-base md:prose-lg max-w-none mb-8 sm:mb-12">
      <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl sm:rounded-2xl p-4 sm:p-6 md:p-8">
        <Content />
      </div>
    </div>

    
    {paper.data.bibtex && (
      <section class="mb-8 sm:mb-12">
        <h2 class="text-2xl sm:text-3xl font-bold text-white mb-4 sm:mb-6">Citation</h2>
        <div class="bg-dark/50 backdrop-blur-sm border border-white/10 rounded-xl sm:rounded-2xl p-4 sm:p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg sm:text-xl font-semibold text-white">BibTeX</h3>
            <button
              onclick="navigator.clipboard.writeText(this.parentElement.nextElementSibling.textContent)"
              class="px-3 sm:px-4 py-1.5 sm:py-2 bg-yellow/20 text-yellow text-xs sm:text-sm font-semibold rounded-lg hover:bg-yellow/30 transition-colors"
            >
              Copy
            </button>
          </div>
          <pre class="text-white/90 text-xs sm:text-sm overflow-x-auto"><code>{paper.data.bibtex}</code></pre>
        </div>
      </section>
    )}

    
    {paper.data.tags && paper.data.tags.length > 0 && (
      <section class="mb-8 sm:mb-12">
        <h2 class="text-2xl sm:text-3xl font-bold text-white mb-4 sm:mb-6">Topics</h2>
        <div class="flex flex-wrap gap-2 sm:gap-3">
          {paper.data.tags.map((tag) => (
            <span class="px-3 sm:px-4 py-1.5 sm:py-2 bg-yellow/20 text-yellow text-xs sm:text-sm font-semibold rounded-full border border-yellow/30">
              {tag}
            </span>
          ))}
        </div>
      </section>
    )}

    
    <div class="pt-6 sm:pt-8 border-t border-white/10">
      <a
        href="/papers"
        class="inline-flex items-center gap-2 text-white hover:text-yellow transition-colors text-sm sm:text-base font-semibold"
      >
        <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Papers
      </a>
    </div>
  </article>
</BaseLayout>

<style is:global>
  .prose {
    color: rgba(255, 255, 255, 0.9);
  }

  .prose h2 {
    color: white;
    font-weight: 700;
    font-size: 1.875rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose h3 {
    color: white;
    font-weight: 600;
    font-size: 1.5rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.75;
  }

  .prose a {
    color: #F9D71C;
    text-decoration: underline;
  }

  .prose a:hover {
    opacity: 0.8;
  }

  .prose strong {
    color: white;
    font-weight: 600;
  }

  .prose ul, .prose ol {
    margin-top: 1rem;
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }

  .prose img {
    border-radius: 1rem;
    margin: 2rem 0;
  }

  .prose code {
    background-color: rgba(255, 255, 255, 0.1);
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.875em;
  }

  .prose pre {
    background-color: rgba(0, 0, 0, 0.3);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .prose pre code {
    background-color: transparent;
    padding: 0;
  }
</style>
