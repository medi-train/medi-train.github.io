---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const papers = await getCollection('papers');
const sortedPapers = papers.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout
  title="Papers - MediTrain"
  description="Explore our published research papers and academic contributions to the field of medical education and XR technology."
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-8 sm:py-16">
    
    <div class="text-center mb-8 sm:mb-16">
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 sm:mb-6">
        Research Papers
      </h1>
      <p class="text-base sm:text-lg md:text-xl text-white/90 max-w-3xl mx-auto px-4">
        Explore our published research papers and academic contributions to the field of medical education and XR technology.
      </p>
    </div>

    
    <div class="max-w-5xl mx-auto space-y-6 sm:space-y-8">
      {sortedPapers.map((paper) => (
        <a
          href={`/papers/${paper.slug}`}
          class="block group bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl sm:rounded-2xl overflow-hidden hover:bg-white/10 hover:border-white/20 transition-all duration-300 hover:scale-[1.02]"
        >
          <div class="md:flex">
            {paper.data.image && (
              <div class="md:w-80 md:flex-shrink-0">
                <img
                  src={paper.data.image}
                  alt={paper.data.title}
                  class="w-full h-48 sm:h-64 md:h-full object-cover"
                />
              </div>
            )}
            <div class="p-4 sm:p-6 md:p-8 flex-1">
              <div class="flex items-center gap-2 mb-3 text-yellow text-xs sm:text-sm font-semibold">
                <svg class="w-4 h-4 sm:w-5 sm:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <time datetime={paper.data.pubDate.toISOString()}>
                  {paper.data.pubDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
              </div>

              <h2 class="text-xl sm:text-2xl md:text-3xl font-bold text-white mb-3 sm:mb-4 group-hover:text-yellow transition-colors line-clamp-2">
                {paper.data.title}
              </h2>

              <p class="text-sm sm:text-base text-white/80 mb-3 sm:mb-4 line-clamp-2 sm:line-clamp-3">
                {paper.data.description}
              </p>

              <div class="flex items-start gap-2 text-xs sm:text-sm text-white/70 mb-3">
                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
                <span class="line-clamp-2">{paper.data.authors.join(', ')}</span>
              </div>

              {paper.data.tags && paper.data.tags.length > 0 && (
                <div class="flex flex-wrap gap-2 mt-4">
                  {paper.data.tags.map((tag) => (
                    <span class="px-3 py-1 bg-yellow/20 text-yellow text-xs font-semibold rounded-full border border-yellow/30">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </div>
          </div>
        </a>
      ))}

      {sortedPapers.length === 0 && (
        <div class="text-center py-16">
          <svg class="w-20 h-20 text-white/30 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <p class="text-xl text-white/60">No papers published yet.</p>
        </div>
      )}
    </div>
  </div>
</BaseLayout>
