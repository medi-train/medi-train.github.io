---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const disseminationItems = await getCollection('dissemination');
const sortedItems = disseminationItems.sort((a, b) => b.data.eventDate.valueOf() - a.data.eventDate.valueOf());

const eventTypeLabels = {
  conference: 'Conference',
  workshop: 'Workshop',
  presentation: 'Presentation',
  keynote: 'Keynote',
  poster: 'Poster',
  seminar: 'Seminar',
  webinar: 'Webinar',
  other: 'Event'
};
---

<BaseLayout
  title="Dissemination - MediTrain"
  description="Learn about our conference presentations, workshops, and outreach activities sharing our research with the community."
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-8 sm:py-16">
    <!-- Header -->
    <div class="text-center mb-8 sm:mb-16">
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 sm:mb-6">
        Dissemination Activities
      </h1>
      <p class="text-base sm:text-lg md:text-xl text-white/90 max-w-3xl mx-auto px-4">
        Learn about our conference presentations, workshops, and outreach activities sharing our research with the community.
      </p>
    </div>

    <!-- Dissemination List -->
    <div class="max-w-5xl mx-auto space-y-6 sm:space-y-8">
      {sortedItems.map((item) => (
        <a
          href={`/dissemination/${item.slug}`}
          class="block group bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl sm:rounded-2xl overflow-hidden hover:bg-white/10 hover:border-white/20 transition-all duration-300 hover:scale-[1.02]"
        >
          <div class="md:flex">
            {item.data.image && (
              <div class="md:w-80 md:flex-shrink-0">
                <img
                  src={item.data.image}
                  alt={item.data.title}
                  class="w-full h-48 sm:h-64 md:h-full object-cover"
                />
              </div>
            )}
            <div class="p-4 sm:p-6 md:p-8 flex-1">
              <div class="flex flex-wrap items-center gap-2 sm:gap-3 mb-3 sm:mb-4">
                <span class="px-2 sm:px-3 py-1 bg-yellow/20 text-yellow text-xs font-semibold rounded-full border border-yellow/30">
                  {eventTypeLabels[item.data.eventType]}
                </span>
                <div class="flex items-center gap-2 text-yellow text-xs sm:text-sm font-semibold">
                  <svg class="w-4 h-4 sm:w-5 sm:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <time datetime={item.data.eventDate.toISOString()}>
                    {item.data.eventDate.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                </div>
              </div>

              <h2 class="text-xl sm:text-2xl md:text-3xl font-bold text-white mb-3 sm:mb-4 group-hover:text-yellow transition-colors line-clamp-2">
                {item.data.title}
              </h2>

              <p class="text-sm sm:text-base text-white/80 mb-3 sm:mb-4 line-clamp-2 sm:line-clamp-3">
                {item.data.description}
              </p>

              <div class="space-y-2">
                <div class="flex flex-wrap items-start gap-2 text-xs sm:text-sm text-white/70">
                  <svg class="w-4 h-4 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  <span class="line-clamp-2">{item.data.presenters.join(', ')}</span>
                </div>

                {item.data.location && (
                  <div class="flex items-start gap-2 text-xs sm:text-sm text-white/70">
                    <svg class="w-4 h-4 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <span class="break-words">{item.data.location}</span>
                  </div>
                )}
              </div>

              {item.data.tags && item.data.tags.length > 0 && (
                <div class="flex flex-wrap gap-2 mt-3 sm:mt-4">
                  {item.data.tags.map((tag) => (
                    <span class="px-2 sm:px-3 py-1 bg-white/5 text-white/70 text-xs font-semibold rounded-full border border-white/10">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </div>
          </div>
        </a>
      ))}

      {sortedItems.length === 0 && (
        <div class="text-center py-16">
          <svg class="w-20 h-20 text-white/30 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"></path>
          </svg>
          <p class="text-xl text-white/60">No dissemination activities yet.</p>
        </div>
      )}
    </div>
  </div>
</BaseLayout>
